# Database Credentials
POSTGRES_USER=crm_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=insurance_crm_db
DB_HOST=db
DB_PORT=5432

# Connection Strings
# Used by Next.js inside Docker
DATABASE_URL=postgres://crm_admin:your_secure_password_here@db:5432/insurance_crm_db
# Used by Better Auth Client side (Browser needs localhost)
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Backend Config
PYTHON_ENV=development

# Frontend Config
NODE_ENV=development
# Google OAuth
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# Internal Docker URL for Server-Side communication
BACKEND_INTERNAL_URL=http://backend:8000

# Shared Secret for Service-to-Service Auth
INTERNAL_API_KEY=your_secure_random_string
